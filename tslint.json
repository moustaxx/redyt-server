{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended"],
	"jsRules": {
		"arrow-parens": [true, "ban-single-arg-parens"],
		"arrow-return-shorthand": [true, "multiline"],
		"class-name": true,
		"curly": [true, "as-needed"],
		"comment-format": false,
		"indent": [true, "tabs", 4],
		"linebreak-style": [true, "CRLF"],
		"member-ordering": false,
		"max-classes-per-file": [true, 2],	
		"no-consecutive-blank-lines": [true, 3],
		"no-console": true,
		"no-trailing-whitespace": [true, "ignore-blank-lines"],
		"no-unused-expression": [true, "allow-new"],
		"no-duplicate-variable": true,
		"no-duplicate-imports": true,	
		"ordered-imports": false,
		"object-literal-sort-keys": [false, "match-declaration-order"],
		"one-line": [true, "check-catch", "check-finally"],
		"only-arrow-functions": true,
		"quotemark": [true, "single"],
		"prefer-readonly": true,
		"switch-final-break": true,
		"trailing-comma": false
	},
	"rules": {
		"arrow-parens": [true, "ban-single-arg-parens"],
		"arrow-return-shorthand": [true, "multiline"],
		"class-name": true,
		"curly": [true, "as-needed"],
		"comment-format": false,
		"indent": [true, "tabs", 4],
		"interface-name": [true, "always-prefix"],
		"linebreak-style": [true, "CRLF"],
		"member-ordering": false,
		"max-classes-per-file": [true, 2],	
		"no-consecutive-blank-lines": [true, 3],
		"no-console": true,
		"no-empty-interface": true,
		"no-trailing-whitespace": [true, "ignore-blank-lines"],
		"no-unused-expression": [true, "allow-new"],
		"no-duplicate-variable": true,
		"no-duplicate-imports": true,	
		"ordered-imports": false,
		"object-literal-sort-keys": [false, "match-declaration-order"],
		"one-line": [true, "check-catch", "check-finally"],
		"only-arrow-functions": true,
		"quotemark": [true, "single"],
		"prefer-readonly": true,
		"switch-final-break": true,
		"trailing-comma": false
	},
	"rulesDirectory": []
}
